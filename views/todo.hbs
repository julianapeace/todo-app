<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col"><i class="icon-list" aria-hidden="true"></i> DESCRIPTION</th>
      <th scope="col"><i class="icon-check" aria-hidden="true"></i> DONE</th>
    </tr>
  </thead>
  <tbody>
    {{#each results}}
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{description}}</td>
      <td>
        {{#if done}}
          <i class="icon-check-sign icon-2x" aria-hidden="true"></i>
        {{else}}
          <a href="/todos/done/{{id}}">DONE</a>
        {{/if}}
      </td>
    </tr>
      {{/each}}
      <tr>
        <td><i class="icon-plus-sign icon-2x" aria-hidden="true"></i></td>
        <td colspan="2">
          <form class="form-inline" action="/submit" method="POST">
            <div class="form-group">
              <!-- <label for="DESCRIPTION" class="sr-only">DESCRIPTION</label>
              <input type="text" readonly class="form-control-plaintext" id="DESCRIPTION" value="DESCRIPTION"> -->
            </div>
            <div class="form-group mx-sm-3">
              <label for="description" class="sr-only">DESCRIPTION</label>
              <input type="text" class="form-control" id="description" placeholder="DESCRIBE TASK" name="description">
            </div>
            <button type="submit" class="btn btn-warning">ADD TASK</button>
          </form>
        </td>
      </tr>
  </tbody>
</table>
